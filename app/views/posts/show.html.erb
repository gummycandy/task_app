<div class="main_container">
    <h3>スケジュール詳細</h3>
 
    <table>
      <tr>
        <th>タイトル</th>
        <td><%= @post.title %></td>
      </tr>
      <tr>
        <th>開始日</th>
        <td><%= @post.start_day.strftime("%Y年%m月%d日") %></td>
      </tr>
      <tr>
        <th>終了日</th>
        <td><%= @post.end_day.strftime("%Y年%m月%d日") %></td>
      </tr>
      <tr>
        <th>終日</th>
        <td><%= @post.allday %></td>
      </tr>
      <tr>
        <th>スケジュールメモ</th>
        <td><%= @post.memo %></td>
      </tr>
    </table>
 
    <div>
      <ul>
        <li><%= link_to "スケジュール一覧に戻る", "/posts" %></li>
      </ul>
      <ul>
        <li><%= link_to "スケジュールを編集する", "/posts/#{@post.id}/edit" %></li>
      </ul>
      <ul>
        <li><%= link_to "スケジュールを削除", "/posts/#{@post.id}", method: :delete, data: { confirm: "本当に削除しますか？"} %></li>
      </ul>
    </div>
</div>

<footer>
  <h1>
    現在の日時 :<%= Date.today %>
  </h1>
</footer>